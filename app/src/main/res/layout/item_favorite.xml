<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_view"
        card_view:cardElevation="@dimen/card_view"
        android:layout_margin="@dimen/card_view_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phone_item_height">

        <ImageView
                android:id="@+id/imgPhone"
                tools:srcCompat="@tools:sample/avatars[12]"
                android:layout_width="@dimen/zero_dp_for_use_weight"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/phone_thumb_margin"
                android:contentDescription="@string/mobile_image_desc"/>

        <RelativeLayout
                android:layout_width="@dimen/zero_dp_for_use_weight"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginStart="@dimen/phone_item_detail_margin_start"
                android:orientation="vertical"
                android:padding="@dimen/phone_item_detail_padding">

            <TextView
                    android:id="@+id/txtName"
                    tools:text="ONEPLUS 7 PRO"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/txtPrice"
                    tools:text="179.99"
                    android:textSize="@dimen/phone_item_price_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtName"/>

            <TextView
                    android:id="@+id/txtRating"
                    tools:text="Rating: 4.9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>