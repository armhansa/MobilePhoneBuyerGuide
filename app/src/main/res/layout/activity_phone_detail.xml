<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.phonedetail.PhoneDetailActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/detail_linear_padding">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_image_list_height">

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pagerPhoneImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent60">

                <TextView
                        android:id="@+id/txtRating"
                        tools:text="Rating: 4.9"
                        android:textSize="@dimen/title_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/phone_detail_spec_max_width"
                        android:layout_marginStart="@dimen/phone_detail_rating_margin_start"/>

                <TextView
                        android:id="@+id/txtPrice"
                        tools:text="Price: $179.99"
                        android:textSize="@dimen/title_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/phone_detail_spec_max_width"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/phone_detail_price_margin_end"
                        tools:ignore="RelativeOverlap"/>
                
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/txtName"
                    tools:text="OnePlus 7 Pro"
                    android:textSize="@dimen/big_title_text_size"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/txtBrand"
                    tools:text="OnePlus"
                    android:textSize="@dimen/title_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/phone_detail_brand_margin_start"/>

        </LinearLayout>

        <TextView
                android:id="@+id/txtDesc"
                tools:text="@tools:sample/lorem/random"
                android:textSize="@dimen/phone_description_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/phone_detail_detail_margin_top"/>

    </LinearLayout>

</ScrollView>
